@model Fagner_Projeto___MVC.Models.FichaDeTreino

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Ficha de Treino</h1>

<h4>Fichas De Treino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExercicioId" class="control-label"></label>
                <select asp-for="ExercicioId" class ="form-control" asp-items="ViewBag.ExercicioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Repetiçoes" class="control-label"></label>
                <input asp-for="Repetiçoes" class="form-control" />
                <span asp-validation-for="Repetiçoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroSerie" class="control-label"></label>
                <input asp-for="NumeroSerie" class="form-control" />
                <span asp-validation-for="NumeroSerie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempoDescanso" class="control-label"></label>
                <input asp-for="TempoDescanso" class="form-control" />
                <span asp-validation-for="TempoDescanso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-secondary" /> | 
                <a asp-action="Index" class="btn btn-info">Votlar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
