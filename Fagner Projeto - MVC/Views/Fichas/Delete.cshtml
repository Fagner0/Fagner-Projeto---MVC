    <h4>FichaDeTreino</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Exercicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Exercicio.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Repetiçoes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Repetiçoes)
